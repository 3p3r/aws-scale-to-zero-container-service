{
  "name": "aws-scale-to-zero-container-service",
  "version": "1.0.0",
  "description": "Scale-To-Zero Container Service pattern in AWS.",
  "main": "index.js",
  "scripts": {
    "install:proxy": "npm install --prefix lib/proxy",
    "install:service": "npm install --prefix lib/service",
    "install:wrapper": "npm install --prefix lib/wrapper",
    "install": "npm-run-all --parallel install:*",
    "test": "exit 0",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "build": "docker-compose -f docker-compose.yml build",
    "start": "docker-compose -f docker-compose.yml up --remove-orphans"
  },
  "keywords": [],
  "author": "Sepehr Laal",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-auto-scaling": "^3.0.0",
    "@aws-sdk/client-ecs": "^3.0.0",
    "@aws-sdk/client-route-53": "^3.0.0",
    "aws-cdk-lib": "2.232.1",
    "constructs": "^10.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^25.0.0",
    "aws-cdk": "^2.1034.0",
    "cdk-nextjs-standalone": "^4.3.3",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.21.0"
  }
}
